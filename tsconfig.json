{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2024",
      "dom"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}